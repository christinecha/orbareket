<!--SHOWS-->

 <a id="shows-anchor" class="anchor"></a>
    <div class = "row" id = "shows">
      <h1>Upcoming Shows</h1>
      <br>
      <div class="slideshow">

        <% @shows.each do |show| %>
          <div class="slide-area">
            <div class="slide">
              <p><h2 id = "showDate"><%= show.date.strftime ("%b %d") %></h2></p>
              <h3 id = "showVenue"><%= show.venue %></h3>
              <p id = "showTitle"><%= show.title %></p>
              <p id = "showTime"><%= show.time.strftime ("%l:%M %p") %></p>
              <br>
              <p id = "showArtist">
                <%= show.artist1 + " on " + show.instrument1 if show.artist1? %>
                <br>
                <%= show.artist2 + " on " + show.instrument2 if show.artist2? %>
                <br>
                <%= show.artist3 + " on " + show.instrument3 if show.artist3? %>
                <br>
                <%= show.artist4 + " on " + show.instrument4 if show.artist4? %>
                <br>
                <%= show.artist5 + " on " + show.instrument5 if show.artist5? %>
                <br>
              </p>
              <button class = "default1"><%= link_to "RSVP", "http://" + show.link %></button>
              <button class = "default1">SHARE</button>
            </div>
          </div>
        <% end %>

      </div>

